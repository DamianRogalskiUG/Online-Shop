{
  "compilerOptions": {
    "target": "es5",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "baseUrl": "./",

    "plugins": [
      {
        "name": "next"
      }
    ],
    "paths": {
      "@/*": ["../src/*"],
      "*": ["*", "src/server/*"],
      "express": ["node_modules/express/lib/express"]
    }
  },
  "include": ["next-env.d.ts", "**/*.ts", "**/*.tsx", ".next/types/**/*.ts", "backend/app.ts", "src/server/app.tss/TopComponents/ShoppingCart"],
  "exclude": ["node_modules"]
}
